public class Triangle {

	private double a;
	private double b;
	private double c;

	Triangle(double a, double b, double c) {
		this.a = a;
		this.b = b;
		this.c = c;
	}

	Triangle() {
	}

	public double getA() {
		return a;
	}

	public void setA(double a) {
		this.a = a;
	}

	public double getB() {
		return b;
	}

	public void setB(double b) {
		this.b = b;
	}

	public double getC() {
		return c;
	}

	public void setC(double c) {
		this.c = c;
	}

	public double areaTriangle() {
		double s;
		s = checkTriangle();
		return s;

	}

	private double checkTriangle() {
		double ret;
		ret = 0;
		if ((a <= 0) || (b <= 0) || (c <= 0)) {
			System.out.println("no exist");
		} else {
			if (((a + b) > c) && ((b + c) > a) && ((c + a) > b)) {
				ret = area();
			}
		}

		return ret;
	}

	private double area() {
		double area;
		double p;
		p = p();

		area = Math.sqrt((p - a) * (p - b) * (p - c));

		return area;
	}

	private double p() {
		double p;

		p = (a + b + c) / 2;

		return p;
	}

	public double getArea() {
